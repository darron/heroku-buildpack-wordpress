#!/usr/bin/env bash
# bin/release <build-dir>

NONCE_SALT=`< /dev/urandom /usr/bin/tr -dc _A-Z-a-z-0-9 | /usr/bin/head -c${1:-64};/bin/echo;`
LOGGED_IN_SALT=`< /dev/urandom /usr/bin/tr -dc _A-Z-a-z-0-9 | /usr/bin/head -c${1:-64};/bin/echo;`
SECURE_AUTH_SALT=`< /dev/urandom /usr/bin/tr -dc _A-Z-a-z-0-9 | /usr/bin/head -c${1:-64};/bin/echo;`
AUTH_SALT= `< /dev/urandom /usr/bin/tr -dc _A-Z-a-z-0-9 | /usr/bin/head -c${1:-64};/bin/echo;`
NONCE_KEY=`< /dev/urandom /usr/bin/tr -dc _A-Z-a-z-0-9 | /usr/bin/head -c${1:-64};/bin/echo;`
LOGGED_IN_KEY=`< /dev/urandom /usr/bin/tr -dc _A-Z-a-z-0-9 | /usr/bin/head -c${1:-64};/bin/echo;`
SECURE_AUTH_KEY=`< /dev/urandom /usr/bin/tr -dc _A-Z-a-z-0-9 | /usr/bin/head -c${1:-64};/bin/echo;`
AUTH_KEY=`< /dev/urandom /usr/bin/tr -dc _A-Z-a-z-0-9 | /usr/bin/head -c${1:-64};/bin/echo;`

cat <<EOF
---
addons:
  - cleardb:ignite
  - sendgrid:starter
  - memcachier:dev
  - scheduler:standard
config_vars:
  PATH: /app/bin:/app/vendor/nginx/sbin:/app/vendor/php/bin:/app/vendor/php/sbin:/usr/local/bin:/usr/bin:/bin
  EMAIL_REPLY_TO: email@example.com
  EMAIL_FROM: email@example.com
  EMAIL_NAME: Clark Kent
  ENABLE_SYSTEM_ACCESS: false
  FORCE_SSL_LOGIN: true
  FORCE_SSL_ADMIN: true
  DISABLE_WP_CRON: true
  WP_CACHE: true
  NONCE_SALT: "$NONCE_SALT"
  LOGGED_IN_SALT: "$LOGGED_IN_SALT"
  SECURE_AUTH_SALT: "$SECURE_AUTH_SALT"
  AUTH_SALT: "$AUTH_SALT"
  NONCE_KEY: "$NONCE_KEY"
  LOGGED_IN_KEY: "$LOGGED_IN_KEY"
  SECURE_AUTH_KEY: "$SECURE_AUTH_KEY"
  AUTH_KEY: "$AUTH_KEY"
default_process_types:
  web: start.sh
EOF